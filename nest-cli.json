{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "entryFile": "app/main",
  "compilerOptions": {
    "deleteOutDir": true,
    "assets": [
      {
        "include": "db/**/*.json",
        "outDir": "dist"
      },
      {
        "include": "db/**/*.sql",
        "outDir": "dist"
      }
    ],
    "watchAssets": true
  }
}
